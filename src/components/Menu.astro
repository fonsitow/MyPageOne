---
import Logo from '../assets/logo.svg';
import { Icon } from 'astro-icon/components'
---

<header>
    <nav class="menu">
        <!--logo de la pagina -->
        <div class="logo">
            <img src="/logo.svg" />
        </div>
        <!--navegacion de la pagina -->
        <div class="navbar"
        id="navbar">
        <ul id="nav-list">
            <li><a href="/" class="menu item">inicio</a></li>
            <li><a href="/juegos" class="menu item">juegos</a></li>
            <li><a href="#" class="menu item">tienda</a></li>
            <li><a href="#" class="menu item">noticias</a></li>
            <li><a href="#" class="menu item">mas</a></li>
        </div>
        </ul>
        <a href="/iniciar"> <button class="boton" > 
            iniciar sesion 
        <Icon name=mdi:user width="24" height="24" ></Icon>
    </button> </a>
    </nav>
</header>

<style>
    .menu {
        display: flex;
        background-color: rgb(0, 0, 0);
        justify-content: space-between;
        align-items: center;
}
    .navbar {
    display: flex;
    justify-content: center;
    padding: 20px 0;
    }

    #nav-list {
        list-style: none;
        display: flex;
        gap: 30px;
        padding: 0;
        margin: 0px;
    }
    

    .boton {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    background-color: rgba(255, 255, 255, 0.5);
    border: linen;
    border-radius: 8px;
    padding: 8px 16px;  }

.menu .item {
    position: relative;
    text-decoration: none;
    color: #ffffff;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.5px;
    padding: 8px 0;
    opacity: 1;
    transition: opacity 0.3s ease;
}
 .menu-item::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0%;
    height: 2px;
    background-color: #FFD700;
    transition: width 0.3s ease;
 }
 .menu-item:hover::after {
    width: 100%;   
}

#lista:hover .menu-item {
    opacity: 0.3;
}

#nav-list .menu-item:hover {
    opacity: 1;
}

.logo img {
    width: 50px;
    height: 50px;
}


</style>